<?xml version="1.0" encoding="UTF-8"?>
<odoo>

  <record id="view_student_management_form" model="ir.ui.view">
    <field name="name">view.student_management.form</field>
    <field name="model">student.management</field>
    <field name="arch" type="xml">
      <form string="student_management">
        <header>
          <field name="state" widget="statusbar" />
        </header>
        <sheet>
          <div class="oe_title">
            <label for="name" />
            <h1>
              <field name="name" />
            </h1>
          </div>
          <group>
            <group>
              <field name="email" />
              <field name="age" />
            </group>
          </group>
        </sheet>
      </form>
    </field>
  </record>


  <record id="action_student_management" model="ir.actions.act_window">
    <field name="name">Estudiantes</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">student.management</field>
    <field name="view_mode">list,form</field>
    <field name="domain">[]</field>
    <field name="context">{}</field>
    <field name="help" type="html">
      <p class="oe_view_nocontent_create">
        Gestionar estudiantes
      </p>
    </field>
  </record>


  <menuitem
    id="student_management_menu"
    name="Estudiantes"
    action="action_student_management" />


</odoo>