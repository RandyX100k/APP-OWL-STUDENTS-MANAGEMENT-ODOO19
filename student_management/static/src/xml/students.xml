<?xml version="1.0" encoding="UTF-8"?>

<templates>
    <t t-name="student_management.StudentsTemplate">

        <t t-if="state.view_alert">
            <div class="messages">
                <p class="message">
                    No se pudieron obtener los estudiantes
                </p>
            </div>

        </t>

        <t t-else="">
            <div class="filter">
                <input t-ref="filter_name" t-on-input="filter_name" placeholder="Nombre"/>
            </div>
            <table>
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Edad</th>
                        <th>Estado</th>
                        <th>Accion</th>
                    </tr>
                </thead>

                <tbody>
                    <t t-foreach="state.students" t-as="st" t-key="st.id">
                        <tr>
                            <td><t t-out="st.name"/></td>
                            <td><t t-out="st.age"/></td>
                            <td><t t-out="st.state"/></td>
                            <td>
                                <t t-if="st.state == 'active' ">
                                    <button 
                                    t-on-click="change_state"
                                    t-att-data-id="st.id">
                                        Desactivar
                                    
                                    </button>
                                </t>

                                <t t-else="">
                                    <button 
                                    t-on-click="change_state"
                                    t-att-data-id="st.id">
                                        Activar
                                    
                                    </button>
                                </t>
                            </td>
                        </tr>
                    </t>
                </tbody>
            </table>
        </t>


    </t>
</templates>